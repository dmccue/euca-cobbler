{% set iface = 'ansible_' + bridge_iface %}
{% set chosenif = hostvars[inventory_hostname][iface] %}
DEVICE={{ bridge }}
TYPE=Bridge
BOOTPROTO=static
IPADDR={{ chosenif.ipv4.address }}
NETMASK={{ chosenif.ipv4.netmask }}
{% if nc_gateway is defined %}
GATEWAY={{ nc_gateway }}
{% endif %}
ONBOOT=yes
DELAY=0
